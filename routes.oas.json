      "manageOrgDataRequest": {
        "type": "object",
        "properties": {
          "dataType": {
            "type": "string",
            "enum": [
              "pattern",
              "policy",
              "capabilities"
            ],
            "description": "Type of cluster data to manage: \"pattern\" for organizational patterns, \"policy\" for policy intents, \"capabilities\" for resource capabilities"
          },
          "operation": {
            "type": "string",
            "enum": [
              "create",
              "list",
              "get",
              "delete",
              "deleteAll",
              "scan",
              "analyze",
              "progress",
              "search"
            ],
            "description": "Operation to perform on the cluster data"
          },
          "sessionId": {
            "type": "string",
            "description": "Session ID (required for continuing workflow steps, optional for progress - uses latest session if omitted)"
          },
          "step": {
            "type": "string",
            "description": "Current workflow step (required when sessionId is provided)"
          },
          "response": {
            "type": "string",
            "description": "User response to previous workflow step question"
          },
          "id": {
            "type": "string",
            "description": "Data item ID (required for get/delete operations) or search query (required for search operations)"
          },
          "limit": {
            "type": "number",
            "description": "Maximum number of items to return (default: 10)"
          },
          "resource": {
            "type": "object",
            "properties": {
              "kind": {
                "type": "string"
              },
              "group": {
                "type": "string"
              },
              "apiVersion": {
                "type": "string"
              }
            },
            "required": [
              "kind",
              "group",
              "apiVersion"
            ],
            "additionalProperties": false,
            "description": "Kubernetes resource reference (for capabilities operations)"
          },
          "resourceList": {
            "type": "string",
            "description": "Comma-separated list of resources to scan (format: Kind.group or Kind for core resources)"
          },
          "collection": {
            "type": "string",
            "description": "Collection name for capabilities operations (default: \"capabilities\", use \"capabilities-policies\" for pre-populated test data)"
          },
          "interaction_id": {
            "type": "string",
            "description": "INTERNAL ONLY - Do not populate. Used for evaluation dataset generation."
          }
        },
        "required": [
          "dataType",
          "operation"
        ],
        "additionalProperties": false
      },
      "projectSetupRequest": {
        "type": "object",
        "properties": {
          "step": {
            "type": "string",
            "enum": [
              "discover",
              "reportScan",
              "generateScope"
            ],
            "description": "Workflow step: \"discover\" (default) starts new session and returns file list, \"reportScan\" analyzes scan results, \"generateScope\" generates all files in a scope. Defaults to \"discover\" if omitted."
          },
          "sessionId": {
            "type": "string",
            "description": "Session ID from previous step (required for reportScan and generateScope steps)"
          },
          "existingFiles": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "List of files that exist in the repository (required for first reportScan call, optional for subsequent calls with selectedScopes)"
          },
          "selectedScopes": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Scopes user chose to setup (e.g., [\"readme\", \"legal\", \"github-community\"]) (required for reportScan step after initial scan)"
          },
          "scope": {
            "type": "string",
            "description": "Scope to generate (e.g., \"github-community\") (required for generateScope step)"
          },
          "answers": {
            "type": "object",
